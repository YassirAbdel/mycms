{% extends 'admin/base.html.twig' %}

{% block title %}Liste des Collections{% endblock %}

{% block stylesheets %}
    <style>
        .action span {
            margin-right: 5px;
        }
        .card {
            align-items: normal;
        }
    </style>
{% endblock %}

{% block body %}
            <div class="container-fluid mt-3">
                <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Liste des collections</h4>
                                <div class="table-responsive"> 
                                    <table class="table table-bordered table-striped verticle-middle">
                                        <thead>
                                            <tr>
                                                <th scope="col">Numéro</th>
                                                <th scope="col">Titre</th>
                                                <th scope="col">Statuts</th>
                                                <th scope="col">Date de modification</th>
                                                <th scope="col">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for collectioncnd in collectioncnds %}
                                                <tr>
                                                    <td>{{ collectioncnd.id }}</td>
                                                    <td>{{ collectioncnd.titre }}</td>
                                                    <td>
                                                        <div class="action">
                                                            <span style="font-weight:1000">Publié <i class="fa fa-check" style="color:#{% if collectioncnd.published==true %}008000{%else%}FF0000{% endif %}"></i></span>
                                                            <span style="font-weight:1000">A la une <i class="fa fa-check" style="color:#{% if collectioncnd.folderFront==true %}008000{% else %}FF0000{% endif %}"></i></a></span>
                                                        </div>
                                                    </td>
                                                    <td>{{ collectioncnd.updatedAt|date("d-m-Y \à G:i:s") }}</td>
                                                    <td>
                                                        <div class="action">
                                                            <span><a href="{{ path('app_collectioncnd_edit', {'id': collectioncnd.id}) }}" data-toggle="tooltip" data-placement="top" title="Editer"><i class="fa fa-pencil color-muted m-r-5"></i></a></span>
                                                            <span><a href="{{ path('app_collectioncnd_show', {'id': collectioncnd.id}) }}" data-toggle="tooltip" data-placement="top" title="Enrichir"><i class="fa fa-folder-open color-danger"></i> </a></span>
                                                        </div>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="4">Aucune collections trouvée</td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

            </div>
 {% endblock %}
