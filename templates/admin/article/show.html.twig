{% extends 'admin/base.html.twig' %}

{% block title %}Article{% endblock %}

{% block stylesheets %}
    <style>
        .nav {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }
        .nav li {
            float: left;
            margin-right: 5px;
        }

        .nav li a {
            display: block;
            text-align: center;
            padding: 16px;
            padding: 7px;
            text-decoration: none;
        }
        h3 {
            font-size: 1rem;
        }
        .card li ul li {
            list-style: disclosure-closed; 
            margin-left: 2rem;
            padding-left: 0rem;
        }
        .card li {
            font-size: 0.9rem;
            line-height: 1.4;
            font-weight: 300;
            list-style: disc;
            margin-left: 2rem;
            list-style: none;
        }
        .card table {
            margin-bottom: 1rem;
        }
        button.btn {
            margin-top: 0px;
        }
    </style>
{% endblock %}

{% block body %}
<!-- container -->
{% set articletextes = article.textes %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h2>{{ article.titre }}</h2>
                    {% if article.soustitre is defined %}
                    <h3>{{ article.soustitre }}</h3>
                    {% endif %}
                    {% set statut = article.published %}
                    {% set laune = article.folderFront %}
                    <span style="font-weight:1000">Publié <i class="fa fa-check" style="color:#{% if statut==true %}008000{%else%}FF0000{% endif %}"></i></span>&nbsp;<span style="font-weight:1000">A la une <i class="fa fa-check" style="color:#{% if laune==true %}008000{% else %}FF0000{% endif %}"></i></a></span>
                    <div style="margin-top:10px;">
                    {{ article.resume|raw }}
                    </div>
                    <div style="text-align:center;">
                        <img src="{{ vich_uploader_asset(article, 'imageFile') }}" class="card-img-top" style="height: auto; width: 50%; margin-bottom:10px;">
                    </div>

                    <div style="margin-top:20px;">
                        <ul class="nav">
                            <li>
                                <a class="btn btn-primary" href="{{ path('app_article_edit', {'id': article.id}) }}" role="button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                </svg> Modifier</a>
                            </li>
                            <li>
                                <a class="btn btn-primary" href="{{ path('app_texte_new', {'id_article': article.id}) }}" role="button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-card-text" viewBox="0 0 16 16">
                                <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                                <path d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z"/>
                                </svg> Ajouter un paragraphe</a> 
                            </li>
                            {% if articletextes|length == 0 %}
                            <li>
                                <form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" onsubmit="return confirm('Vous voulez vraiment supprimer cet article ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                    <button class="btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16"><path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"></path>
                                    </svg> Supprimer</button>
                                </form>
                            </li>
                            {% endif %}
                        </ul>
                    </div>
                    <hr>
                    {% if articletextes|length > 0 %}
                        {% for texte in articletextes %}
                            {% if texte.contenu is defined %}<p>{{ texte.contenu|raw }}</p> {% endif %}
                            {% set images = texte.images %}
                            {% set uploads = texte.uploads %}
                            {% set ressources = texte.ressources %}
                            {% if images|length > 0 %}
                                <div class="row">
                                    {% for image in images %}
                                        <div class="col-md-6 col-lg-3">
                                            <div class="card">
                                                {% if image.imageFile is defined %}
                                                    <a href="{{ image.url }}" target="_blank"><img class="img-fluid" alt="Consulter la ressource" title="Consulter la ressource" src="{{ vich_uploader_asset(image, 'imageFile') | imagine_filter('thumbv') }}" alt=""></a>
                                                {% else %}
                                                    <a href="{{ image.url }}"target="_blank"><img class="card-img-top" alt="Consulter la ressource" title="Consulter la ressource" src="{{ asset('assets/images/empty.png') }}"></a>
                                                {% endif %}
                                                <span style="text-align:center;margin-bottom:-15px;">{{ image.type }}</span>
                                                <div class="card-body">
                                                    <h5 class="card-title">{{ image.titre }}</h5>
                                                    <div class="card-text">
                                                        <div class="space-icone">
                                                            <span><a href="{{ image.url }}" target="_blank" data-toggle="tooltip" data-placement="top" title="Consulter"><i class="fa fa-search color-danger"></i> </a></span>
                                                            <span><a href="{{ path('app_image_remove',{'id':image.id, 'model':1 }) }}" data-toggle="tooltip" data-placement="left" title="Supprimer cette ressource" onclick="return confirm('Voulez-vous vraiment supprimer cette ressource ?');"><i class="fa fa-trash fa-lg color-muted m-r-5"></i></a></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>    
                            {% endif %}
                            {% if uploads|length > 0 %}
                                <h4>Les fichiers pdf associés</h4>
                                <ul> 
                                    {% for file in texte.uploads %}
                                        <li>
                                            <a href={{path('app_upload_download',{'slug': file.slug, 'id':file.id})}}>{{file.titre}}</a> - <a href={{path('app_upload_remove',{'id':file.id})}}>Supprimer</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                            {% if ressources|length > 0 %}
                                <div class="row">
                                    {% for ressource in ressources %}
                                        <div class="col-md-6 col-lg-3">
                                            <div class="card">
                                                {% if ressource.urlImag %}
                                                    <a href="{{'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank"><img class="img-fluid" alt="Consulter la ressource" title="Consulter la ressource" src="http://cadic.cnd.fr/exl-img/{{ ressource.urlImag|replace({'.jpg': '.jpg'}) }}"></a>
                                                {% else %}
                                                    <a href="{{'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank"><img class="card-img-top" alt="Consulter la ressource" title="Consulter la ressource" src="{{ asset('assets/images/empty.png') }}"></a>
                                                {% endif %}
                                                <span style="text-align:center;margin-bottom:-15px;">{{ ressource.type }}</span>
                                                <div class="card-body">
                                                    <h5 class="card-title">{{ ressource.titre }}</h5>
                                                    <div class="card-text">
                                                        <div class="space-icone">
                                                            <span><a href="{{ 'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank" data-toggle="tooltip" data-placement="top" title="Consulter"><i class="fa fa-search color-danger"></i> </a></span>
                                                            <span><a href="{{ path('app_remove_ressource_texte', {id: ressource.id , 'id_texte': texte.id, 'id_article': article.id }) }}" data-toggle="tooltip" data-placement="left" title="Supprimer cette ressource" onclick="return confirm('Voulez-vous vraiment supprimer cette ressource ?');"><i class="fa fa-trash fa-lg color-muted m-r-5"></i></a></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                            <div style="margin-bottom:50px;width:100%;margin-top:5px;">
                                <span> <a href="{{ path('app_texte_edit', {'id': texte.id, 'id_article': article.id}) }}" data-toggle="tooltip" data-placement="left" title="Modifier ce paragraphe" style="float:left;margin-left:5px;"><i class="fa  fa-pencil fa-lg color-muted m-r-5"></i></a></span> 
                                <span> <a href="{{ path('app_remove_texte', {'id': texte.id, 'id_article': article.id, '_token': csrf_token('delete' ~ texte.id) }) }}" data-toggle="tooltip" data-placement="left" title="Supprimer ce paragraphe" style="float:left;margin-left:5px;" onclick="return confirm('Voulez-vous vraiment supprimer ce paragraphe ?');"><i class="fa fa-trash fa-lg color-muted m-r-5"></i></a></span>
                                <span> <a href="{{ path('app_ressource_index', {'id_texte': texte.id, 'id_article': article.id} ) }}" data-toggle="tooltip" data-placement="left" title="Ajouter une ressource" style="float:left;margin-left:5px;"><i class="fa fa-file-image-o fa-lg color-muted m-r-5"></i></a></span>
                            </div>
                            <hr>
                        {% endfor %}
                        {% endif %}
                    </div>
            </div>
        </div>
    </div>
</div>
<!-- Bootstrap core JavaScript
    ================================================== -->
	<!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    
</div>
<!-- #/ container -->
{% block javascripts %}
    <script src={{ asset('assets/plugins/tables/js/jquery.dataTables.min.js') }}></script>
    <script src={{ asset('assets/plugins/tables/js/datatable/dataTables.bootstrap4.min.js') }}></script>
    <script src={{ asset('assets/plugins/tables/js/datatable-init/datatable-basic.min.js') }}></script>
{% endblock %}

{% endblock %}
