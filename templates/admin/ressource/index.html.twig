{% extends 'admin/base.html.twig' %}

{% block title %}Les ressources{% endblock %}

{% block stylesheets %}
    <link href={{ asset('assets/plugins/tables/css/datatable/dataTables.bootstrap4.min.css') }} rel="stylesheet">
    <style>
        ul {
            list-style: none; /* enlever les puces */
            margin: 0; /* enlever les marges automatiques */
        }
        .card-body ul li {
            display: table-cell; /* affichage en ligne */
        }
        td ul li {
            display: table-cell; /* affichage en ligne */
        }
        ul li button {
            margin-right: 5px;
        }
        .index {
            /* color: #ffffff; 
            font-weight:600;
            background-color: #bf6f33; 
            border-radius: 5px;
            */
            padding: 2px;
            margin-right: 1px;
            margin-top: 2px;
	    }
        .space-icone span {
            margin-right: 5px;
        }
        .form-control {
            min-width: 660px;
        }
        .form-control {
            min-width: 500px;
        }
    </style>
{% endblock %}

{% block body %}
<!-- container -->
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                        {% if dossier is defined %}
                            <h3 class="card-title">{{ dossier.titre}} > {{ rubrique.titre }}</h3>
                        {% elseif collection is defined %}
                            <h3 class="card-title">{{ collection.titre }} > {{ souscollection.titre }}</h3>
                        {% endif %}
                        <p><i>Associer une ressource</i></p>
                        {% set request_idrubrique = app.request.get('id_rubrique') %}
                        {% set request_idtexte = app.request.get('id_texte') %}
                        {% set request_idsouscollection = app.request.get('id_sous_collection') %}
                        
                            <div class="form-row">
                                <div class="col-md-6">
									{{form_start(form)}}
                                        {{ form_row(form.string) }}
                                        {% if request_idrubrique %}
                                            {{ form_row(form.id_rubrique, { 'value': app.request.get('id_rubrique')}) }}
                                        {% elseif rubrique is defined %}
                                            {{ form_row(form.id_rubrique, { 'value': rubrique.id }) }}
                                        {% endif %}
                                        {% if collection is defined %}
                                            {{ form_row(form.id_collection, { 'value': collection.id }) }}
                                        {% endif %}
                                        {% if souscollection is defined %}
                                            {{ form_row(form.id_sous_collection, { 'value': souscollection.id }) }}
                                        {% endif %}
                                        {% if article is defined %}
                                            {{ form_row(form.id_article, { 'value': article.id }) }}
                                        {% endif %}
                                        {% if request_idtexte %}
                                            {{ form_row(form.id_texte, { 'value': app.request.get('id_texte')}) }}
                                        {% endif %}
                                </div>
                                    <div class="col-md-3">
                                            <button class="btn input-group-text bg-transparent" style="height: 45px;margin-top:0px;"><i class="fa fa-search" aria-hidden="true"></i></button>
            							</span>
            						</div>
								{{ form_end(form)}}
                            </div>
                        
                        
                    <div class="m-4">
                        <ul  class="nav nav-tabs">
                            <li class="active"><a  href="#liste" class="nav-link active" data-toggle="tab"><i class="fa fa-list-ul fa-lg color-muted m-r-5"></i></a></li>
                            <li><a href="#vignettes" class="nav-link" data-toggle="tab"><i class="fa fa-th fa-lg color-muted m-r-5"></i></a></li>
			            </ul>
                    </div>
                    <div class="tab-content">
                    {% if ressources|length > 0 %}
                    <div class="table-responsive tab-pane fade show active" id="liste">
                            {# display navigation #}
                            <div class="navigation">
                                {{ knp_pagination_render(ressources) }}
                            </div>
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Référence</th>
                                        <th>Type</th>
                                        <th>Titre</th>
                                        <th>Personne</th>
                                        <th>Oeuvre</th>
                                        <th>Organisme</th>
                                        <!-- <th>Lieu</th> -->
                                        <!-- <th>Descripteur matière</th> -->
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for ressource in ressources %}
                                    <tr>
                                        <td>{{ ressource.referenceCadic }}</td>
                                        <td>{{ ressource.type }}</td>
                                        <td>{{ ressource.titre|raw }}</td>
                                        <td>
                                            {% if ressource.personne %}
                                                {% set personnes = ressource.personne|split('|') %}
                                                {% for personne in personnes %}
                                                    <div class="index">{{ personne }}</div>
                                                {% endfor %}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if ressource.oeuvre %}
                                                {% set oeuvres = ressource.oeuvre|split('|') %}
                                                {% for oeuvre in oeuvres %}
                                                    <div class="index">{{ oeuvre }}</div>
                                                {% endfor %}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if ressource.organisme %}
                                                {% set organismes = ressource.organisme|split('|') %}
                                                {% for organisme in organismes %}
                                                    <div class="index">{{ organisme }}</div>
                                                {% endfor %}
                                            {% endif %}
                                        </td>
                                        <td align="center">
                                                <div class="space-icone">
                                                <!-- On récupère les variables de navigation session -->
                                                {% set id_texte = app.request.get('id_texte') %}
                                                {% set id_sous_rubrique = app.request.get('id_sous_rubrique') %}
                                                {% set id_rubrique = app.request.get('id_rubrique') %}
                                                {% set id_collection = app.request.get('id_collection') %}
                                                {% set id_sous_collection = app.request.get('id_sous_collection') %}
                                                {% set id_article = app.request.get('id_article') %}
                                                    {% if dossier is defined %}
                                                        {% if (id_texte is not empty) and (id_rubrique is not empty)  %}
                                                            <span><a href="{{ path('app_add_ressources_texte', {id: ressource.id , 'id_texte': id_texte ,'id_sous_rubrique': app.request.get('id_sous_rubrique'), 'id_rubrique': id_rubrique, 'string': app.request.get('string'), 'page': app.request.get('page') }) }}" data-toggle="tooltip" data-placement="top" title="Associer"><i class="fa fa-plus-square color-danger"></i> </a></span>
                                                        {% elseif (id_texte is not empty) and (id_sous_rubrique is not empty)  %}
                                                            <span><a href="{{ path('app_add_ressources_texte', {id: ressource.id , 'id_texte': id_texte ,'id_sous_rubrique': app.request.get('id_sous_rubrique'), 'id_rubrique': id_rubrique, 'string': app.request.get('string'), 'page': app.request.get('page') }) }}" data-toggle="tooltip" data-placement="top" title="Associer"><i class="fa fa-plus-square color-danger"></i> </a></span>
                                                        {% else %}
                                                            <span><a href="{{ path('app_add_ressources_texte', {id: ressource.id , 'id_texte': app.session.get('idtexte') ,'id_sous_rubrique': app.session.get('idsousrubrique'), 'id_rubrique': app.session.get('idrubrique'), 'string': app.request.get('string'), 'page': app.request.get('page') }) }}" data-toggle="tooltip" data-placement="top" title="Associer"><i class="fa fa-plus-square color-danger"></i> </a></span>
                                                        {% endif %}
                                                    {% elseif collection is defined %}
                                                        {% if (id_collection is not empty) and (id_sous_collection is not empty)  %}
                                                            <span><a href="{{ path('app_add_ressources_texte', {id: ressource.id , 'id_sous_collection': app.request.get('id_sous_collection'), 'id_collection': app.request.get('id_collection'), 'string': app.request.get('string'), 'page': app.request.get('page') }) }}" data-toggle="tooltip" data-placement="top" title="Associer"><i class="fa fa-plus-square color-danger"></i> </a></span>
                                                        {% else %}
                                                            <span><a href="{{ path('app_add_ressources_texte', {id: ressource.id , 'id_sous_collection': app.session.get('idsouscollection'), 'id_collection': app.session.get('idcollection'), 'string': app.request.get('string'), 'page': app.request.get('page') }) }}" data-toggle="tooltip" data-placement="top" title="Associer"><i class="fa fa-plus-square color-danger"></i> </a></span>
                                                        {% endif %}
                                                    {% elseif article is defined %}
                                                        {% if id_article is not empty %}
                                                            <span><a href="{{ path('app_add_ressources_texte', {id: ressource.id , 'id_texte': app.request.get('id_texte') ,'id_article': app.request.get('id_article'), 'string': app.request.get('string'), 'page': app.request.get('page') }) }}" data-toggle="tooltip" data-placement="top" title="Associer"><i class="fa fa-plus-square color-danger"></i> </a></span>
                                                        {% else %}
                                                            <span><a href="{{ path('app_add_ressources_texte', {id: ressource.id , 'id_texte': app.session.get('idtexte') ,'id_article': app.session.get('idarticle'), 'string': app.request.get('string'), 'page': app.request.get('page') }) }}" data-toggle="tooltip" data-placement="top" title="Associer"><i class="fa fa-plus-square color-danger"></i> </a></span>
                                                        {% endif %}
                                                    {% endif %}
                                                    <span><a href="{{ 'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank" data-toggle="tooltip" data-placement="top" title="Consulter"><i class="fa fa-search color-danger"></i> </a></span>
                                                </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>Référence</th>
                                    <th>Type</th>
                                    <th>Titre</th>
                                    <th>Personne</th>
                                    <th>Oeuvre</th>
                                    <th>Organisme</th>
                                    <!-- <th>Lieu</th>
                                    <th>Descripteur matière</th> -->
                                    <th>Action</th>
                                </tr>
                                </tfoot>
                            </table>
                            {# display navigation #}
                            <div class="navigation">
                                {{ knp_pagination_render(ressources) }}
                            </div>
                            <!-- <a href="{{ path('app_ressource_new', {'id_texte': app.request.get('id_texte') }) }}">Nouvelle ressource</a> -->
                        </div>
                        <div class="table-responsive tab-pane fade" id="vignettes">
                            <div class="row">
                                {% for ressource in ressources %}
                                    <div class="col-md-6 col-lg-3">
                                        <div class="card">
                                            {% if ressource.urlImag %}
                                                <a href="{{'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank"><img class="img-fluid" alt="Consulter la ressource" title="Consulter la ressource" src="http://cadic.cnd.fr/exl-img/{{ ressource.urlImag|replace({'.jpg': '.jpg'}) }}"></a>
                                            {% else %}
                                                <a href="{{'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank"><img class="card-img-top" alt="Consulter la ressource" title="Consulter la ressource" src="{{ asset('assets/images/empty.png') }}"></a>
                                            {% endif %}
                                            <span style="text-align:center;margin-bottom:-15px;">{{ ressource.type }}</span>
                                            <div class="card-body">
                                                <h5 class="card-title">{{ ressource.titre }}</h5>
                                                <div class="space-icone">
                                                <!-- On récupère les variables de navigation session -->
                                                {% set id_texte = app.request.get('id_texte') %}
                                                {% set id_sous_rubrique = app.request.get('id_sous_rubrique') %}
                                                {% set id_rubrique = app.request.get('id_rubrique') %}
                                                {% set id_collection = app.request.get('id_collection') %}
                                                {% set id_sous_collection = app.request.get('id_sous_collection') %}
                                                {% set id_article = app.request.get('id_article') %}
                                                    {% if dossier is defined %}
                                                        {% if (id_texte is not empty) and (id_rubrique is not empty)  %}
                                                            <span><a href="{{ path('app_add_ressources_texte', {id: ressource.id , 'id_texte': id_texte ,'id_sous_rubrique': app.request.get('id_sous_rubrique'), 'id_rubrique': id_rubrique, 'string': app.request.get('string'), 'page': app.request.get('page') }) }}" data-toggle="tooltip" data-placement="top" title="Associer"><i class="fa fa-plus-square color-danger"></i> </a></span>
                                                        {% elseif (id_texte is not empty) and (id_sous_rubrique is not empty)  %}
                                                            <span><a href="{{ path('app_add_ressources_texte', {id: ressource.id , 'id_texte': id_texte ,'id_sous_rubrique': app.request.get('id_sous_rubrique'), 'id_rubrique': id_rubrique, 'string': app.request.get('string'), 'page': app.request.get('page') }) }}" data-toggle="tooltip" data-placement="top" title="Associer"><i class="fa fa-plus-square color-danger"></i> </a></span>
                                                        {% else %}
                                                            <span><a href="{{ path('app_add_ressources_texte', {id: ressource.id , 'id_texte': app.session.get('idtexte') ,'id_sous_rubrique': app.session.get('idsousrubrique'), 'id_rubrique': app.session.get('idrubrique'), 'string': app.request.get('string'), 'page': app.request.get('page') }) }}" data-toggle="tooltip" data-placement="top" title="Associer"><i class="fa fa-plus-square color-danger"></i> </a></span>
                                                        {% endif %}
                                                    {% elseif collection is defined %}
                                                        {% if (id_collection is not empty) and (id_sous_collection is not empty)  %}
                                                            <span><a href="{{ path('app_add_ressources_texte', {id: ressource.id , 'id_sous_collection': app.request.get('id_sous_collection'), 'id_collection': app.request.get('id_collection'), 'string': app.request.get('string'), 'page': app.request.get('page') }) }}" data-toggle="tooltip" data-placement="top" title="Associer"><i class="fa fa-plus-square color-danger"></i> </a></span>
                                                        {% else %}
                                                            <span><a href="{{ path('app_add_ressources_texte', {id: ressource.id , 'id_sous_collection': app.session.get('idsouscollection'), 'id_collection': app.session.get('idcollection'), 'string': app.request.get('string'), 'page': app.request.get('page') }) }}" data-toggle="tooltip" data-placement="top" title="Associer"><i class="fa fa-plus-square color-danger"></i> </a></span>
                                                        {% endif %}
                                                    {% elseif article is defined %}
                                                        {% if id_article is not empty %}
                                                            <span><a href="{{ path('app_add_ressources_texte', {id: ressource.id , 'id_texte': app.request.get('id_texte') ,'id_article': app.request.get('id_article'), 'string': app.request.get('string'), 'page': app.request.get('page') }) }}" data-toggle="tooltip" data-placement="top" title="Associer"><i class="fa fa-plus-square color-danger"></i> </a></span>
                                                        {% else %}
                                                            <span><a href="{{ path('app_add_ressources_texte', {id: ressource.id , 'id_texte': app.session.get('idtexte') ,'id_article': app.session.get('idarticle'), 'string': app.request.get('string'), 'page': app.request.get('page') }) }}" data-toggle="tooltip" data-placement="top" title="Associer"><i class="fa fa-plus-square color-danger"></i> </a></span>
                                                        {% endif %}
                                                    {% endif %}
                                                    <span><a href="{{ 'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank" data-toggle="tooltip" data-placement="top" title="Consulter"><i class="fa fa-search color-danger"></i> </a></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                                {# display navigation #}
                                <div class="navigation">
                                    {{ knp_pagination_render(ressources) }}
                                </div>
                                <!-- <a href="{{ path('app_ressource_new', {'id_texte': app.request.get('id_texte') }) }}">Nouvelle ressource</a> -->
                            </div>
                        </div>
                        
                    {% else %}
                        <strong >no records found</strong>
                    {% endif %}
                    </div>
            </div>
        </div>
    </div>
</div>
