{% extends 'admin/base.html.twig' %}

{% block title %}Les ressources{% endblock %}

{% block stylesheets %}
    <link href={{ asset('assets/plugins/tables/css/datatable/dataTables.bootstrap4.min.css') }} rel="stylesheet">
    <style>
        ul {
            list-style: none; /* enlever les puces */
            margin: 0; /* enlever les marges automatiques */
        }
        .card-body ul li {
            display: table-cell; /* affichage en ligne */
        }
        td ul li {
            display: table-cell; /* affichage en ligne */
        }
        ul li button {
            margin-right: 5px;
        }
        .index {
            /* color: #ffffff; 
            font-weight:600;
            background-color: #bf6f33; 
            border-radius: 5px;
            */
            padding: 2px;
            margin-right: 1px;
            margin-top: 2px;
	    }
        .space-icone span {
            margin-right: 5px;
        }
        .form-control {
            min-width: 660px;
        }
        .form-control {
            min-width: 500px;
        }
    </style>
{% endblock %}

{% block body %}
<!-- container -->
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                        {% if dossier is defined %}
                            <h3 class="card-title">DOSSIER : {{ dossier.titre}} > {{ rubrique.titre }}</h3>
                        {% elseif collection is defined %}
                            <h3 class="card-title">{{ collection.titre }} > {{ souscollection.titre }}</h3>
                        {% elseif article is defined %}
                            <h3 class="card-title">ARTICLE : {{ article.titre }}</h3>
                        {% endif %}
                    <div class="m-4">
                        <ul  class="nav nav-tabs">
                            <li class="active"><a  href="#liste" class="nav-link active" data-toggle="tab"><i class="fa fa-list-ul fa-lg color-muted m-r-5"></i></a></li>
                            <li><a href="#vignettes" class="nav-link" data-toggle="tab"><i class="fa fa-th fa-lg color-muted m-r-5"></i></a></li>
			            </ul>
                    </div>
                    <div class="tab-content">
                    {% if selectioncomplete|length > 0 %}
                        <div class="table-responsive tab-pane fade show active" id="liste">
                        <span>Votre sélection :</span>
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>Référence</th>
                                        <th>Type</th>
                                        <th>Titre</th>
                                        <th>Personne</th>
                                        <th>Oeuvre</th>
                                        <th>Organisme</th>
                                        <!-- <th>Lieu</th> -->
                                        <!-- <th>Descripteur matière</th> -->
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for selection in selectioncomplete %}
                                    <tr>
                                        <td>{{ selection.ressource.referenceCadic }}</td>
                                        <td>{{ selection.ressource.type }}</td>
                                        <td>{{ selection.ressource.titre|raw }}</td>
                                        <td>
                                            {% if selection.ressource.personne %}
                                                {% set personnes = selection.ressource.personne|split('|') %}
                                                {% for personne in personnes %}
                                                    <div class="index">{{ personne }}</div>
                                                {% endfor %}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if selection.ressource.oeuvre %}
                                                {% set oeuvres = selection.ressource.oeuvre|split('|') %}
                                                {% for oeuvre in oeuvres %}
                                                    <div class="index">{{ oeuvre }}</div>
                                                {% endfor %}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if selection.ressource.organisme %}
                                                {% set organismes = selection.ressource.organisme|split('|') %}
                                                {% for organisme in organismes %}
                                                    <div class="index">{{ organisme }}</div>
                                                {% endfor %}
                                            {% endif %}
                                        </td>
                                        <td align="center">
                                                <div class="space-icone">
                                                    <span><a href="{{ 'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ selection.ressource.referenceCadic }}" target="_blank" data-toggle="tooltip" data-placement="top" title="Consulter"><i class="fa fa-search color-danger"></i> </a></span>
                                                    <span><a href="{{ path('app_remove_ressource_selection', {id: selection.ressource.id}) }}" data-toggle="tooltip" data-placement="left" title="Supprimer cette ressource" onclick="return confirm('Voulez-vous vraiment supprimer cette ressource ?');"><i class="fa fa-trash fa-lg color-muted m-r-5"></i></a></span>
                                                </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>Référence</th>
                                    <th>Type</th>
                                    <th>Titre</th>
                                    <th>Personne</th>
                                    <th>Oeuvre</th>
                                    <th>Organisme</th>
                                    <!-- <th>Lieu</th>
                                    <th>Descripteur matière</th> -->
                                    <th>Action</th>
                                </tr>
                                </tfoot>
                            </table>
                        </div>
                        <div class="table-responsive tab-pane fade" id="vignettes">
                        <span>Votre sélection :</span><br/><br/>
                            <div class="row">
                                {% for selection in selectioncomplete %}
                                    <div class="col-md-6 col-lg-3">
                                        <div class="card">
                                            {% if selection.ressource.urlImag %}
                                                <a href="{{'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ selection.ressource.referenceCadic }}" target="_blank"><img class="img-fluid" alt="Consulter la ressource" title="Consulter la ressource" src="http://cadic.cnd.fr/exl-img/{{ selection.ressource.urlImag|replace({'.jpg': '.jpg'}) }}"></a>
                                            {% else %}
                                                <a href="{{'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ selection.ressource.referenceCadic }}" target="_blank"><img class="card-img-top" alt="Consulter la ressource" title="Consulter la ressource" src="{{ asset('assets/images/empty.png') }}"></a>
                                            {% endif %}
                                            <span style="text-align:center;margin-bottom:-15px;">{{ selection.ressource.type }}</span>
                                            <div class="card-body">
                                                <h5 class="card-title">{{ selection.ressource.titre }}</h5>
                                                <div class="space-icone">
                                                    <span><a href="{{ 'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ selection.ressource.referenceCadic }}" target="_blank" data-toggle="tooltip" data-placement="top" title="Consulter"><i class="fa fa-search color-danger"></i> </a></span>
                                                    <span><a href="{{ path('app_remove_ressource_selection', {id: selection.ressource.id}) }}" data-toggle="tooltip" data-placement="left" title="Supprimer cette ressource" onclick="return confirm('Voulez-vous vraiment supprimer cette ressource ?');"><i class="fa fa-trash fa-lg color-muted m-r-5"></i></a></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                                <!-- <a href="{{ path('app_ressource_new', {'id_texte': app.request.get('id_texte') }) }}">Nouvelle ressource</a> -->
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3">
                                <a href="{{ path('app_add_selection', {id: count} ) }}" target="_self" class="btn btn-primary" tabindex="-1" role="button" aria-disabled="true">Associer</a>
                        </div>
                    {% else %}
                        <strong>Votre sélection est vide !</strong>
                    {% endif %}
                    </div>
            </div>
        </div>
    </div>
</div>
<!-- Bootstrap core JavaScript
    ================================================== -->
	<!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    
</div>
<!-- #/ container -->
{% block javascripts %}
    <script src={{ asset('assets/plugins/tables/js/jquery.dataTables.min.js') }}></script>
    <script src={{ asset('assets/plugins/tables/js/datatable/dataTables.bootstrap4.min.js') }}></script>
    <script src={{ asset('assets/plugins/tables/js/datatable-init/datatable-basic.min.js') }}></script>
{% endblock %}

{% endblock %}
