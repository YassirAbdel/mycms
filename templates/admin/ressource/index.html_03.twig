{% extends 'base.html.twig' %}

{% block title %}Les ressources{% endblock %}

{% block stylesheets %}
    <link href={{ asset('assets/plugins/tables/css/datatable/dataTables.bootstrap4.min.css') }} rel="stylesheet">
    <link href={{ asset('assets/css/style.css') }} rel="stylesheet">
    <link href={{ asset('assets/css/cnd.css') }} rel="stylesheet">
{% endblock %}

{% block body %}
<!-- container -->
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    {% if dossier is defined %}
                        <h3 class="card-title">{{ dossier.titre }} > {{ rubrique.titre }}</h3>
                    {% elseif collection is defined %}
                        <h3 class="card-title">{{ collection.titre }} > {{ souscollection.titre }}</h3>
                    {% endif %}
                        <p><i>Associer une ressource</i></p>
                    <div class="m-4">
                        <ul  class="nav nav-tabs">
			                <li class="active"><a  href="#liste" class="nav-link active" data-toggle="tab"><i class="fa fa-list-ul fa-lg color-muted m-r-5"></i></a></li>
			                <li><a href="#vignettes" class="nav-link" data-toggle="tab"><i class="fa fa-th fa-lg color-muted m-r-5"></i></a></li>
                        </ul>
                    </div>
                    <div class="tab-content">
                    {% if ressources|length > 0 %}
                        <div class="table-responsive tab-pane fade show active" id="liste">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>actions</th>
                                        <th>Id</th>
                                        <th>Type</th>
                                        <th>Titre</th>
                                        <th>Langue</th>
                                        <th>Commentaire</th>
                                        <th>Personne</th>
                                        <th>Oeuvre</th>
                                        <th>Organisme</th>
                                        <th>Lieu</th>
                                        <th>Descripteur</th>
                                        <th>Analyse</th>
                                        <th>Droits</th>
                                        <th>Created_at</th>
                                        <th>Auteur</th>
                                        <th>Responsable</th>
                                        <th>Editeur</th>
                                        <th>Lieuedition</th>
                                        <th>Annee_edition</th>
                                        <th>Isbn</th>
                                        <th>Pagination</th>
                                        <th>Collection</th>
                                        <th>Auteur_secondaire</th>
                                        <th>AnneeStat</th>
                                        <th>PerHisto</th>
                                        <th>OrigDoc</th>
                                        <th>CopyRight</th>
                                        <th>Support</th>
                                        <th>Couleur</th>
                                        <th>Format</th>
                                        <th>FormatFile</th>
                                        <th>Duree</th>
                                        <th>NbFiles</th>
                                        <th>Cote</th>
                                        <th>SupNum</th>
                                        <th>LocaSupnum</th>
                                        <th>CoteNum</th>
                                        <th>UrlImag</th>
                                        <th>UrlPdf</th>
                                        <th>UrlAudio</th>
                                        <th>NumVideo</th>
                                        <th>UrlDoc</th>
                                        <th>ResEdit</th>
                                        <th>Lecteur</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for ressource in ressources %}
                                    <tr>
                                        <td>
                                            <ul>
                                                {% if dossier is defined %}
                                                    <li><a href="{{ path('app_add_ressource_texte', {id: ressource.id , 'id_texte': app.request.get('id_texte') ,'id_sous_rubrique': app.request.get('id_sous_rubrique'), 'id_rubrique': app.request.get('id_rubrique') }) }}">Associer à votre texte</a></li>
                                                {% elseif collection is defined %}
                                                    <li><a href="{{ path('app_add_ressource_souscollection', {id: ressource.id , 'id_sous_collection': app.request.get('id_sous_collection'), 'id_collection': app.request.get('id_collection') }) }}">Associer à votre collection</a></li>
                                                {% endif %}
                                                <li><a href="{{ path('app_ressource_show', {'id': ressource.id}) }}">Notice détaillée</a></li>
                                                <li><a href="{{ path('app_ressource_edit', {'id': ressource.id}) }}">Editer</a></li>
                                            </ul>
                                        </td>
                                        <td>{{ ressource.id }}</td>
                                        <td>{{ ressource.type }}</td>
                                        <td>{{ ressource.titre }}</td>
                                        <td>{{ ressource.langue }}</td>
                                        <td>{{ ressource.commentaire }}</td>
                                        <td>{{ ressource.personne }}</td>
                                        <td>{{ ressource.oeuvre }}</td>
                                        <td>{{ ressource.organisme }}</td>
                                        <td>{{ ressource.lieu }}</td>
                                        <td>{{ ressource.descripteur }}</td>
                                        <td>{{ ressource.analyse ? 'Yes' : 'No' }}</td>
                                        <td>{{ ressource.droits ? 'Yes' : 'No' }}</td>
                                        <td>{{ ressource.createdAt ? ressource.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ ressource.auteur }}</td>
                                        <td>{{ ressource.responsable }}</td>
                                        <td>{{ ressource.editeur }}</td>
                                        <td>{{ ressource.lieuedition }}</td>
                                        <td>{{ ressource.anneeEdition }}</td>
                                        <td>{{ ressource.isbn }}</td>
                                        <td>{{ ressource.pagination }}</td>
                                        <td>{{ ressource.collection }}</td>
                                        <td>{{ ressource.auteurSecondaire }}</td>
                                        <td>{{ ressource.anneeStat }}</td>
                                        <td>{{ ressource.perHisto }}</td>
                                        <td>{{ ressource.origDoc }}</td>
                                        <td>{{ ressource.copyRight }}</td>
                                        <td>{{ ressource.support }}</td>
                                        <td>{{ ressource.couleur }}</td>
                                        <td>{{ ressource.format }}</td>
                                        <td>{{ ressource.formatFile }}</td>
                                        <td>{{ ressource.duree }}</td>
                                        <td>{{ ressource.nbFiles }}</td>
                                        <td>{{ ressource.cote }}</td>
                                        <td>{{ ressource.supNum }}</td>
                                        <td>{{ ressource.locaSupnum }}</td>
                                        <td>{{ ressource.coteNum }}</td>
                                        <td>{{ ressource.urlImag }}</td>
                                        <td>{{ ressource.urlPdf }}</td>
                                        <td>{{ ressource.urlAudio }}</td>
                                        <td>{{ ressource.numVideo }}</td>
                                        <td>{{ ressource.urlDoc }}</td>
                                        <td>{{ ressource.resEdit }}</td>
                                        <td>{{ ressource.lecteur }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>actions</th>
                                    <th>Id</th>
                                    <th>Type</th>
                                    <th>Titre</th>
                                    <th>Langue</th>
                                    <th>Commentaire</th>
                                    <th>Personne</th>
                                    <th>Oeuvre</th>
                                    <th>Organisme</th>
                                    <th>Lieu</th>
                                    <th>Descripteur</th>
                                    <th>Analyse</th>
                                    <th>Droits</th>
                                    <th>Created_at</th>
                                    <th>Auteur</th>
                                    <th>Responsable</th>
                                    <th>Editeur</th>
                                    <th>Lieuedition</th>
                                    <th>Annee_edition</th>
                                    <th>Isbn</th>
                                    <th>Pagination</th>
                                    <th>Collection</th>
                                    <th>Auteur_secondaire</th>
                                    <th>AnneeStat</th>
                                    <th>PerHisto</th>
                                    <th>OrigDoc</th>
                                    <th>CopyRight</th>
                                    <th>Support</th>
                                    <th>Couleur</th>
                                    <th>Format</th>
                                    <th>FormatFile</th>
                                    <th>Duree</th>
                                    <th>NbFiles</th>
                                    <th>Cote</th>
                                    <th>SupNum</th>
                                    <th>LocaSupnum</th>
                                    <th>CoteNum</th>
                                    <th>UrlImag</th>
                                    <th>UrlPdf</th>
                                    <th>UrlAudio</th>
                                    <th>NumVideo</th>
                                    <th>UrlDoc</th>
                                    <th>ResEdit</th>
                                    <th>Lecteur</th>
                                </tr>
                                </tfoot>
                            </table>
                            {# display navigation #}
                            <div class="navigation">
                                {{ knp_pagination_render(ressources) }}
                            </div>
                            <a href="{{ path('app_ressource_new', {'id_texte': app.request.get('id_texte') }) }}">Nouvelle ressource</a>
                        </div>
                        <div class="table-responsive tab-pane fade" id="vignettes">
                            <div class="row">
                                {% for ressource in ressources %}
                                    <div class="col-md-6 col-lg-3">
                                        <div class="card">
                                            {% if ressource.urlImag %}
                                                <a href="{{'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank"><img class="img-fluid" alt="Consulter la ressource" title="Consulter la ressource" src="http://cadic.cnd.fr/exl-img/{{ ressource.urlImag|replace({'.jpg': '.jpg'}) }}"></a>
                                            {% else %}
                                                <a href="{{'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank"><img class="card-img-top" alt="Consulter la ressource" title="Consulter la ressource" src="{{ asset('assets/images/empty.png') }}"></a>
                                            {% endif %}
                                            <div class="card-body">
                                                <h5 class="card-title">{{ ressource.titre }}</h5>
                                                <p class="card-text"><a href="{{ 'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank"><button type="button" class="btn mb-1 btn-outline-dark">Consulter</button></a></p>
                                                <ul>
                                                    {% if dossier is defined %}
                                                        <li><a href="{{ path('app_add_ressource_texte', {id: ressource.id , 'id_texte': app.request.get('id_texte') ,'id_sous_rubrique': app.request.get('id_sous_rubrique'), 'id_rubrique': app.request.get('id_rubrique') }) }}" data-toggle="tooltip" title="Ajouter cette ressource"><i class="fa fa-plus-square fa-lg color-muted m-r-5"></i></a></li>
                                                    {% elseif collection is defined %}
                                                        <li><a href="{{ path('app_add_ressource_souscollection', {id: ressource.id , 'id_sous_collection': app.request.get('id_sous_collection'), 'id_collection': app.request.get('id_collection') }) }}" data-toggle="tooltip" title="Ajouter cette ressource"><i class="fa fa-plus-square fa-lg color-muted m-r-5"></i></a></li>
                                                    {% endif %}
                                                        <!-- <li><a href="{{ path('app_ressource_show', {'id': ressource.id}) }}">Notice détaillée</a></li>
                                                        <li><a href="{{ path('app_ressource_edit', {'id': ressource.id}) }}">Editer</a></li> -->
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                                {# display navigation #}
                                <div class="navigation">
                                    {{ knp_pagination_render(ressources) }}
                                </div>
                                <a href="{{ path('app_ressource_new', {'id_texte': app.request.get('id_texte') }) }}">Nouvelle ressource</a>
                            </div>
                        </div>
                    {% else %}
                        <strong >no records found</strong>
                    {% endif %}
                    </div>
            </div>
        </div>
    </div>
</div>
