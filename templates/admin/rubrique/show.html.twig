{% extends 'admin/base.html.twig' %}

{% block title %}Rubrique{% endblock %}

{% block stylesheets %}
    <style>
        .space-icone span {
                margin-right: 5px;
            }
    </style>
{% endblock %}

{% block body %}
            <div class="container-fluid">
            {% set textes = rubrique.textes %}
            {% set sousrubriques = rubrique.sousrubriques %}
            <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h2>{{dossier.titre}} <i class="fa fa-angle-right aria-hidden="true"></i> {{ rubrique.titre}}</h2>
                                {% if textes|length > 0 %}
                                    <p><i>Article</i></p>
                                {% elseif sousrubriques|length > 0 %}
                                    <p><i>Ajouter une sous-rubrique</i></p>
                                {% else %}
                                    <p><i>Ajouter un article ou une rubrique</i></p>
                                {% endif %}
                                <strong>{{ rubrique.resume|raw }}</strong>
                                <div style="margin-top:20px;">
                                    <a class="btn btn-primary" href="{{ path('app_dossier_show', {'id': dossier.id}) }}" role="button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file" viewBox="0 0 16 16">
                                    <path d="M4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4zm0 1h8a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1z"/>
                                    </svg> Dossier</a>
                                    <a class="btn btn-primary" href="{{ path('app_rubrique_edit', {'id': rubrique.id}) }}" role="button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                    </svg> Modifier</a>
                                    
                                    {% if textes|length == 0 and sousrubriques|length == 0 %}
                                        <a class="btn btn-primary" href="{{ path('app_texte_new', {'id_rubrique': rubrique.id}) }}" role="button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-card-text" viewBox="0 0 16 16">
                                        <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                                        <path d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z"/>
                                        </svg> Ajouter un paragraphe (si article)</a> 
                                        <a class="btn btn-primary" href="{{ path('app_sousrubrique_new', {'id_rubrique': rubrique.id}) }}" role="button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-folder-plus" viewBox="0 0 16 16">
                                        <path d="m.5 3 .04.87a1.99 1.99 0 0 0-.342 1.311l.637 7A2 2 0 0 0 2.826 14H9v-1H2.826a1 1 0 0 1-.995-.91l-.637-7A1 1 0 0 1 2.19 4h11.62a1 1 0 0 1 .996 1.09L14.54 8h1.005l.256-2.819A2 2 0 0 0 13.81 3H9.828a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 6.172 1H2.5a2 2 0 0 0-2 2zm5.672-1a1 1 0 0 1 .707.293L7.586 3H2.19c-.24 0-.47.042-.683.12L1.5 2.98a1 1 0 0 1 1-.98h3.672z"/>
                                        <path d="M13.5 10a.5.5 0 0 1 .5.5V12h1.5a.5.5 0 1 1 0 1H14v1.5a.5.5 0 1 1-1 0V13h-1.5a.5.5 0 0 1 0-1H13v-1.5a.5.5 0 0 1 .5-.5z"/>
                                        </svg> Ajouter une sous-rubrique (si rubrique)</a>
                                    {% elseif textes|length > 0 %}
                                        <a class="btn btn-primary" href="{{ path('app_texte_new', {'id_rubrique': rubrique.id}) }}" role="button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-card-text" viewBox="0 0 16 16">
                                        <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                                        <path d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z"/>
                                        </svg> Ajouter un paragraphe</a> 
                                    {% elseif sousrubriques|length > 0 %}
                                        <a class="btn btn-primary" href="{{ path('app_sousrubrique_new', {'id_rubrique': rubrique.id}) }}" role="button">Ajouter une sous-rubrique</a> 
                                    {% endif %}
                                </div>
                                <hr>
                                {% set textes = rubrique.textes %}
                                {% if textes|length > 0 %}
                                    {% for texte in textes %}
                                        <p>{{ texte.contenu|raw }}</p>
                                        {% set ressources = texte.ressources %}
                                        {% if ressources|length > 0 %}
                                            <div class="row">
                                                {% for ressource in ressources %}
                                                    <div class="col-md-6 col-lg-3">
                                                            <div class="card">
                                                                {% if ressource.urlImag %}
		                                                            <a href="{{'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank"><img class="img-fluid" alt="Consulter la ressource" title="Consulter la ressource" src="http://cadic.cnd.fr/exl-img/{{ ressource.urlImag|replace({'.jpg': '.jpg'}) }}"></a>
                                                                {% else %}
                                                                    <a href="{{'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank"><img class="card-img-top" alt="Consulter la ressource" title="Consulter la ressource" src="{{ asset('assets/images/empty.png') }}"></a>
                                                                {% endif %}
                                                                <span style="text-align:center;margin-bottom:-15px;">{{ ressource.type }}</span>
                                                                <div class="card-body">
                                                                    <h5 class="card-title">{{ ressource.titre }}</h5>
                                                                    <div class="card-text">
                                                                        <div class="space-icone">
                                                                            <span><a href="{{ 'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank" data-toggle="tooltip" data-placement="top" title="Consulter"><i class="fa fa-search color-danger"></i> </a></span>
                                                                            <span><a href="{{ path('app_remove_ressource_texte', {id: ressource.id , 'id_texte': texte.id, 'id_rubrique': rubrique.id }) }}" data-toggle="tooltip" data-placement="left" title="Supprimer cette ressource" onclick="return confirm('Voulez-vous vraiment supprimer cette ressource ?');"><i class="fa fa-trash fa-lg color-muted m-r-5"></i></a></span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                    </div>
                                                {% endfor %}
                                            </div>  
                                        {% endif %}
                                        <div style="margin-bottom:50px;width:100%;margin-top:5px;"> 
                                            <span><a href="{{ path('app_texte_edit', {'id': texte.id, 'id_rubrique': rubrique.id}) }}" data-toggle="tooltip" data-placement="left" title="Modifier ce paragraphe" style="float:left;margin-left:5px;"><i class="fa fa-pencil fa-lg color-muted m-r-5"></i></a></span>
                                            <span> <a href="{{ path('app_remove_texte', {'id': texte.id, 'id_rubrique': rubrique.id, '_token': csrf_token('delete' ~ texte.id) }) }}" data-toggle="tooltip" data-placement="left" title="Supprimer ce paragraphe" style="float:left;margin-left:5px;" onclick="return confirm('Voulez-vous vraiment supprimer ce paragraphe ?');"><i class="fa fa-trash fa-lg color-muted m-r-5"></i></a></span>
                                            <span><a href="{{ path('app_ressource_index', {'id_texte': texte.id, 'id_rubrique': rubrique.id} ) }}" data-toggle="tooltip" data-placement="left" title="Ajouter une ressource" style="float:left;margin-left:5px;"><i class="fa fa-file-image-o fa-lg color-muted m-r-5"></i></a></span>
                                        </div>
                                        <hr>
                                    {% endfor %}
                                {% endif %}
                                {% set sousrubriques = rubrique.sousrubriques %}
                                {% set id_rubrique = rubrique.id %}
                                {% if sousrubriques|length > 0 %}
                                    {% set numero_ss_rubrique = 0 %}
                                    <!-- <sommaire> -->
                                    <div class="sommaire">
                                        <h2>Sommaire</h2>
                                            {% for sousrubrique in sousrubriques %}
                                                {% set counter = ( counter | default(0) ) + 1 %}
                                                <p><a href="#{{ counter }}">{{ counter }} - {{ sousrubrique.titre }}</a></p>
                                            {% endfor %}
                                    </div>
                                    <!-- </sommaire> -->
                                    {% for sousrubrique in sousrubriques %}
                                        <h3>{% set counter = ( counter | default(0) ) + 1 %} {{ counter }} - {{ sousrubrique.titre }} <span id="{{ counter }}"></span></h3>
                                        <div style="margin-bottom:50px;width:100%;margin-top:5px;"> 
                                            <span><a href="{{ path('app_sousrubrique_edit', {'id': sousrubrique.id}) }}" data-toggle="tooltip" data-placement="left" title="Modifier cette sous-rubrique" style="float:left;margin-left:5px;"><i class="fa fa-pencil fa-lg color-muted m-r-5"></i></a></span>
                                            <span><a href="{{ path('app_texte_new', {'id_sous_rubrique': sousrubrique.id} ) }}" data-toggle="tooltip" data-placement="left" title="Ajouter un paragraphe" style="float:left;margin-left:5px;"><i class="fa fa-plus-circle fa-lg color-muted m-r-5"></i></a></span>
                                            <span><a href="#sommaire" data-toggle="tooltip" data-placement="left" title="Retour au sommaire" style="float:left;margin-left:5px;"><i class="fa fa-circle-up fa-lg color-muted m-r-5"></i></a></span>
                                        </div>
                                        {% if sousrubrique.resume is defined and sousrubrique.resume is not null %}
                                            <p><strong>{{ sousrubrique.resume|raw }}</strong></p>
                                        {% endif %}
                                        {% set sousrubriquetextes = sousrubrique.textes %}
                                        {% if sousrubriquetextes|length > 0 %}
                                            {% for texte in sousrubriquetextes %}
                                                {% if texte.contenu is defined %}<p>{{ texte.contenu|raw }}</p> {% endif %}
                                                {% set ressources = texte.ressources %}
                                                {% if ressources|length > 0 %}
                                                <div class="row">
                                                    {% for ressource in ressources %}
                                                        <div class="col-md-6 col-lg-3">
                                                            <div class="card">
                                                                {% if ressource.urlImag %}
		                                                            <a href="{{'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank"><img class="img-fluid" alt="Consulter la ressource" title="Consulter la ressource" src="http://cadic.cnd.fr/exl-img/{{ ressource.urlImag|replace({'.jpg': '.jpg'}) }}"></a>
                                                                {% else %}
                                                                    <a href="{{'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank"><img class="card-img-top" alt="Consulter la ressource" title="Consulter la ressource" src="{{ asset('assets/images/empty.png') }}"></a>
                                                                {% endif %}
                                                                <span style="text-align:center;margin-bottom:-15px;">{{ ressource.type }}</span>
                                                                <div class="card-body">
                                                                    <h5 class="card-title">{{ ressource.titre|raw }}</h5>
                                                                    <div class="card-text">
                                                                        <div class="space-icone">
                                                                            <span><a href="{{ 'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank" data-toggle="tooltip" data-placement="top" title="Consulter"><i class="fa fa-search color-danger"></i> </a></span>
                                                                            <span><a href="{{ path('app_remove_ressource_texte', {id: ressource.id , 'id_texte': texte.id, 'id_sous_rubrique': sousrubrique.id }) }}" data-toggle="tooltip" data-placement="left" title="Supprimer cette ressource" onclick="return confirm('Voulez-vous vraiment supprimer cette ressource ?');"><i class="fa fa-trash fa-lg color-muted m-r-5"></i></a></span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    {% endfor %}
                                                </div>
                                                {% endif %}
                                                <div style="margin-bottom:50px;width:100%;margin-top:5px;">
                                                    <span> <a href="{{ path('app_texte_edit', {'id': texte.id, 'id_sous_rubrique': sousrubrique.id}) }}" data-toggle="tooltip" data-placement="left" title="Modifier ce paragraphe" style="float:left;margin-left:5px;"><i class="fa  fa-pencil fa-lg color-muted m-r-5"></i></a></span> 
                                                    <span> <a href="{{ path('app_remove_texte', {'id': texte.id, 'id_sous_rubrique': sousrubrique.id, '_token': csrf_token('delete' ~ texte.id) }) }}" data-toggle="tooltip" data-placement="left" title="Supprimer ce paragraphe" style="float:left;margin-left:5px;" onclick="return confirm('Voulez-vous vraiment supprimer ce paragraphe ?');"><i class="fa fa-trash fa-lg color-muted m-r-5"></i></a></span>
                                                    <span> <a href="{{ path('app_ressource_index', {'id_texte': texte.id, 'id_rubrique': rubrique.id} ) }}" data-toggle="tooltip" data-placement="left" title="Ajouter une ressource" style="float:left;margin-left:5px;"><i class="fa fa-file-image-o fa-lg color-muted m-r-5"></i></a></span>
                                                </div>
                                                <hr>
                                            {% endfor %}
                                        {% else %}
                                                {{ include('admin/sousrubrique/_delete_form.html.twig') }}
                                        {% endif %}
                                    {% endfor %}
                                {% elseif textes|length == 0 and sousrubriques|length == 0 %}
                                    {{ include('admin/rubrique/_delete_form.html.twig') }}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
{% endblock %}
