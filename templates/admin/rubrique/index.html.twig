{% extends 'admin/base.html.twig' %}

{% block title %}Les rubriques{% endblock %}

{% block body %}
    <h1>Les Rubriques</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                
                <th>Resume</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rubrique in rubriques %}
            <tr>
                <td>{{ rubrique.id }}</td>
                <td>{{ rubrique.titre }}</td>
                <td>{{ rubrique.resume }}</td>
                <td>
                    <a href="{{ path('app_rubrique_show', {'id': rubrique.id}) }}">Consulter</a>
                    <a href="{{ path('app_rubrique_edit', {'id': rubrique.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rubrique_new') }}">Ajouter une nouvelle rubrique</a>
{% endblock %}
