{% extends 'admin/base.html.twig' %}

{% block title %}Sous-collection{% endblock %}

{% block stylesheets %}
    <style>
        .space-icone span {
                margin-right: 5px;
            }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h2>{{collection.titre}} <i class="fa fa-angle-right" aria-hidden="true"></i> {{ souscollectioncnd.titre}}</h2>
                            <div style="text-align:center;">
                                <img src="{{ vich_uploader_asset(souscollectioncnd, 'imageFile') }}" class="card-img-top" style="height: auto; width: 50%; margin-bottom:10px;">
                            </div>
                                <div style="margin-top:20px;">
                                    <a class="btn btn-primary" href="{{ path('app_collectioncnd_show', {'id': collection.id}) }}" role="button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file" viewBox="0 0 16 16">
                                    <path d="M4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4zm0 1h8a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1z"/>
                                    </svg> Collection</a>
                                    <a class="btn btn-primary" href="{{ path('app_souscollectioncnd_edit', {'id': souscollectioncnd.id}) }}" role="button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                    </svg> Modifier</a>
                                    <a class="btn btn-primary" href="{{ path('app_ressource_index', {'id_sous_collection': souscollectioncnd.id, 'id_collection': collection.id} ) }}" role="button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-card-text" viewBox="0 0 16 16">
                                    <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                                    <path d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z"/>
                                    </svg> Ajouter une ressource</a>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-md-12 col-lg-12">
                                        <h2>{{ souscollectioncnd.titre}}{% if souscollectioncnd.soustitre %} : {{ souscollectioncnd.soustitre}}{% endif %}</h2>
                                        {{ souscollectioncnd.presentation|raw }}
                                    </div>
                                </div>
                                {% set ressources = souscollectioncnd.ressources %}
                                {% if ressources|length > 0 %}
                                    <div class="row">
                                        {% for ressource in ressources %}
                                            <div class="col-md-6 col-lg-3">
                                                <div class="card">
                                                    {% if ressource.urlImag %}
                                                        <a href="{{'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank"><img class="img-fluid" alt="Consulter la ressource" title="Consulter la ressource" src="http://cadic.cnd.fr/exl-img/{{ ressource.urlImag|replace({'.jpg': '.jpg'}) }}"></a>
                                                    {% else %}
                                                        <a href="{{'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank"><img class="card-img-top" alt="Consulter la ressource" title="Consulter la ressource" src="{{ asset('assets/images/empty.png') }}"></a>
                                                    {% endif %}
                                                    <span style="text-align:center;margin-bottom:-15px;">{{ ressource.type }}</span>
                                                    <div class="card-body">
                                                        <h5 class="card-title">{{ ressource.titre }}</h5>
                                                        <div class="card-text">
                                                            <div class="space-icone">
                                                                <span><a href="{{ 'http://mediatheque.cnd.fr/spip.php?page=mediatheque-numerique-ressource&id=' ~ ressource.referenceCadic }}" target="_blank" data-toggle="tooltip" data-placement="top" title="Consulter"><i class="fa fa-search color-danger"></i> </a></span>
                                                                <span><a href="{{ path('app_remove_ressource_souscollection', {id: ressource.id , 'id_collection': collection.id, 'id_sous_collection': souscollectioncnd.id }) }}" data-toggle="tooltip" data-placement="left" title="Supprimer cette ressource" onclick="return confirm('Voulez-vous vraiment supprimer cette ressource ?');"><i class="fa fa-trash fa-lg color-muted m-r-5"></i></a></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div> 
        </div>
    </div>

{% endblock %}
