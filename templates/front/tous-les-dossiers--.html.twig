{% extends 'front/base.html.twig' %}
{% block css %}
<style>
	h5 {
		margin-left: -20rem;
	}
	.title {
		line-height: 2.333333rem;
	}
	@media screen and (max-width: 480px) {
		.top-response {
			margin-top: 4rem;
			margin-bottom: -2rem;
			margin-left: -1rem;
		}
		.content h2 {
			margin-top: 0rem;
		}
		.content h1 {
			margin-top: 0rem;
		}
	}
	@media screen and (min-width: 834px) {
		h5 {
			margin-left: -20rem;
		}
	}
	@media screen and (min-width: 768px) {
		h5 {
			margin-left: -8rem;
		}
	}
	@media screen and (min-width: 1024px) {
		h5 {
			margin-left: -20rem;
		}
	}
</style>
{% endblock %}
{% block body %}
	<section class="wrapper style1 align-center">
		<div class="inner">
			<h5 class="title title--edition top-response">Tous les dossiers th√©matiques</h5>
		</div>
	</section>
	{% for produit in produits %}
		{% if produit.type == 1 %}
			<section id="dossier" class="spotlight style1 orient-left content-align-left image-position-center onscroll-image-fade-in">
				<div class="content" >
					<h1 class="title title--edition"><a href={{ path('front_dossier_show', {'slug': produit.slug,'id': produit.id}) }} title="Consulter ce dossier">{{ produit.titre }}</a></h1>
					{% if produit.soustitre %}
							<h2><a href={{ path('front_dossier_show', {'slug': produit.slug,'id': produit.id}) }} title="Consulter ce dossier">{{ produit.soustitre }}</a></h2>
					{% endif %}
					{% if produit.resume %}
						{{ produit.resume|u.truncate(800, '...')|raw }}
					{% endif %}
					<!--
					<ul class="actions stacked">
						<li><a href="#" class="button" style="margin-left:0rem;margin-top:1rem;color: #111 !important;box-shadow: inset 0 0 0 2px rgb(0 0 0 / 60%);" title="Consulter ce dossier ">Consulter</a></li>
					</ul>
					-->
				</div>
				<div class="image">
					<a href={{ path('front_dossier_show', {'slug': produit.slug,'id': produit.id}) }} title="Consulter ce dossier "><img src={{ vich_uploader_asset(produit, 'imageFile') | imagine_filter('thumbd')}} alt="" /></a>
				</div>
			</section>
		{% endif %}
		{% if produit.type == 2 %}
			<section id="dossier" class="spotlight style1 orient-left content-align-left image-position-center onscroll-image-fade-in">
				<div class="content">
					<h1 class="title title--edition"><a href={{ path('front_article_show', {'slug': produit.slug,'id': produit.id}) }} title="Consulter ce dossier">{{ produit.titre }}</a></h1>
					{% if produit.soustitre %}
							<h2><a href={{ path('front_article_show', {'slug': produit.slug,'id': produit.id}) }} title="Consulter ce dossier">{{ produit.soustitre }}</a></h2>
					{% endif %}
					{% if produit.resume %}
						{{ produit.resume|u.truncate(600, '...')|raw }}</a>
					{% endif %}
					<!--
					<ul class="actions stacked">
						<li><a href="#" class="button" style="margin-left:0rem;margin-top:1rem;color: #111 !important;box-shadow: inset 0 0 0 2px rgb(0 0 0 / 60%);" title="Consulter">Consulter ce dossier</a></li>
					</ul>
					-->
				</div>
				<div class="image">
					<a href={{ path('front_article_show', {'slug': produit.slug,'id': produit.id}) }} title="Consulter ce dossier"><img src={{ vich_uploader_asset(produit, 'imageFile') | imagine_filter('thumbd')}} alt="" /></a>
				</div>
			</section>
		{% endif %}
	{% endfor %}	
{% endblock %}
 {% block javascript %}
	<script>
		$(".img-display img").attr("style", "display:none;");
	</script>
{% endblock %}			